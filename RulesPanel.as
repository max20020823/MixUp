package {		import gs.TweenLite;	import flash.display.Sprite;	import flash.display.SimpleButton;	import flash.events.Event;	import flash.events.MouseEvent;		public class RulesPanel extends Sprite {				public var closeButton:SimpleButton;				public function RulesPanel() {			addEventListener(Event.ADDED_TO_STAGE, addedToStage, false, 0, true);		}				private function addedToStage(e:Event):void {			TweenLite.from(this, .4, { y : -height } );			closeButton.addEventListener(MouseEvent.CLICK, closeButtonClick, false, 0, true);		}				private function closeButtonClick(e:MouseEvent):void {			closeButton.removeEventListener(MouseEvent.CLICK, closeButtonClick);			TweenLite.to(this, .4, { y : -height, onComplete:parent.removeChild, onCompleteParams:[this] } );		}			}}